@model CRM.Domain.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<style>
   
    .animated-fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    input:focus {
        outline: none;
        border: 2px solid #faac52 !important;
        box-shadow: 0 0 10px 3px rgba(247, 136, 7, 0.75) !important;
        transition: all 0.3s ease !important;
        background-color: #f5ca98 !important;
    }


    body.dark-mode .btn-primary {
        background-color: #1976d2;
        border-color: #1976d2;
    }

        body.dark-mode .btn-primary:hover {
            background-color: #1565c0;
        }

    body.light-theme .btn-primary {
        background-color: #fb8c00;
        border-color: #fb8c00;
        color: #fff;
    }

        body.light-theme .btn-primary:hover {
            background-color: #ef6c00;
            border-color: #ef6c00;
        }

    .flowtext {
        background: linear-gradient(90deg, #8000b3, #ff6600, #cc0033, #0033cc, #8000b3);
        background-size: 200% auto;
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: textflow 5s linear infinite;
        font-weight: 900;
        font-family: 'Comic Sans MS', 'Comic Sans', cursive;
        font-size: 4rem;


    }
    @@keyframes textflow {
        from {background-position: 0% center}         
        to {background-position: 200% center}
    }

    .auth-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 40px;
        padding: 40px;
        flex-wrap: wrap;
    }

    .info-box {
        flex: 1 1 300px;
        max-width: 400px;
        background: rgba(255, 255, 255, 0.8);
        border-left: 5px solid #fb8c00;
        border-radius: 10px;
        color: #333;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .form-box {
        flex: 1 1 400px;
        max-width: 500px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
    }
    
</style>


<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>


<div class="auth-container d-flex">
    <!-- Левая часть: информация о CRM -->
    <div class="info-box p-4">
        <h2>О системе CRM</h2>
        <p>
            Наша CRM помогает управлять клиентами, следить за задачами, анализировать продажи
            и автоматизировать бизнес-процессы. Удобный интерфейс, адаптивный дизайн
            и мощная аналитика — всё в одном месте.
        </p>
    </div>
    <!-- Правая часть: форма входа -->
    <div class="form-box p-4">
        <h1 class="flowtext">Регистрация</h1>
        <form asp-action="Register" method="post">
            <div class="form-group">    
                <span class="fa-stack">
                    <i class="fa fa-envelope fa-stack-1x" style="color: orange;"></i> <
                    <i class="fa fa-envelope-o fa-stack-1x" style="color: black;"></i> 
                </span>     
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="fa-stack">
                    <i class="fa fa-lock fa-stack-1x" style="color: orange;"></i>
                    <i class="fa fa-lock fa-stack-1x" style="color: black;"></i>
                </span>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="fa-stack">
                    <i class="fa fa-lock fa-stack-1x" style="color: orange;"></i>
                    <i class="fa fa-lock fa-stack-1x" style="color: black;"></i>
                </span>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mt-3">Зарегистрироваться</button>
        </form>
    </div>
 
</div>

